<html>
<head>
	<meta charset="UTF-8">
	<title>WunderList</title>
	<link rel="stylesheet" href="./stylesheets/bootstrap-3.3.4-dist/css/bootstrap.min.css">
</head>
<body>
	<div class="container text-center">
		<div class="col-xs-5 col-md-5  col-lg-5 col-sm-5">
			<h1>Log In</h1>
			<form name="login" class="form-horizontal" method='post' action="/login" role="form">
				
					<div class="input-group">
						<input type="mail" placeholder="mail" name='mail' class="form-control mail" >
						<i class="input-group-addon">@</i>
					</div>
					<br>
					<div class="input-group">
						<input type="password" placeholder="password" name="password" class="form-control " >
						<i class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></i>
					</div>
					<button class="btn btn-lg btn-primary" type="submit">Log in</button>
			</form>
		</div>

		<div class="col-xs-5 col-md-5  col-lg-5 col-sm-5">


			<h1>Sign up</h1>
			<form name="signup" class="form-horizontal" method='post' action="/signup" role="form">
				
					<div class="input-group">
						<input type="mail" placeholder="mail" name="mail" class="form-control mail">
						<i class="input-group-addon">@</i>
					</div>
					<br>
					<div class="input-group">
						<input type="password" placeholder="password" name="password" class="form-control ">
						<i class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></i>
					</div>
					<button class="btn btn-lg btn-primary" type="submit">Sign up</button>
			</form>
		</div>

	</div>
</body>
</html>


